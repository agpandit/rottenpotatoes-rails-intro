-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
    // %th Movie Title
    - title_highlight_class = "hilite" if !params[:sort_order].nil? and 'byTitle' == params[:sort_order]
    %th{class: title_highlight_class}= link_to "Movie Title", movies_path(sort_order: :byTitle), id: 'title_header'
    %th Rating
    //%th Release Date
    - release_date_highlight_class = "hilite" if !params[:sort_order].nil? and 'byReleaseDate' == params[:sort_order]
    %th{class: release_date_highlight_class}= link_to "Release Date", movies_path(sort_order: :byReleaseDate), id: 'release_date_header'
    %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
